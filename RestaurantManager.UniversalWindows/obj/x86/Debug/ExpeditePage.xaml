<Page
    x:Class="RestaurantManager.UniversalWindows.ExpeditePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestaurantManager.UniversalWindows"
    xmlns:viewmodels="using:RestaurantManager.ViewModels"
    xmlns:extensions="using:RestaurantManager.Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewmodels:ExpediteViewModel />
    </Page.DataContext>
    <Page.Resources>
        <extensions:BoolToColorConverter
            TrueColor="Red"
            FalseColor="Transparent"
            x:Key="BoolToColorConverter" />
        <DataTemplate
            x:Key="InnerListTemplate">
            <Border
                Width="300">
                <TextBlock
                    x:Name="textBlock"
                    TextWrapping="Wrap"
                    Text="{Binding Title}"
                    FontSize="21.333" />
            </Border>
        </DataTemplate>

        <DataTemplate
            x:Key="GridViewItemTemplate">
            <Grid
                Width="300">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="200" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <ListBox
                    x:Name="listBox"
                    ItemsSource="{Binding Items}"
                    ItemTemplate="{StaticResource InnerListTemplate}"
                    IsTapEnabled="False"
                    IsHoldingEnabled="False"
                    IsDoubleTapEnabled="False"
                    IsRightTapEnabled="False"
                    IsHitTestVisible="False" />
                <StackPanel
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Row="1"
                    Width="300"
                    Height="150"
                    Background="#FF898585">
                    <TextBlock
                        x:Name="textBlock"
                        HorizontalAlignment="Left"
                        TextWrapping="Wrap"
                        Text="{Binding Table.Description}"
                        VerticalAlignment="Top"
                        FontSize="{ThemeResource ListViewHeaderItemThemeFontSize}"
                        Margin="5,0,0,0" />
                    <TextBlock
                        x:Name="textBlock1"
                        HorizontalAlignment="Left"
                        TextWrapping="Wrap"
                        Text="Special requests"
                        Margin="10,10,0,0" />
                    <TextBlock
                        x:Name="textBlock2"
                        TextWrapping="Wrap"
                        Text="{Binding SpecialRequests}"
                        Margin="10,0,0,0" />
                </StackPanel>
                <Border
                    VerticalAlignment="Bottom"
                    Background="{Binding Expedite, Converter={StaticResource BoolToColorConverter}}">
                    <Button
                        x:Name="button"
                        Content="Delete"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Command="{Binding ElementName=gridView, Path=DataContext.DeleteOrderCommand}" CommandParameter="{Binding}" />
                </Border>

            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Page.TopAppBar>
        <AppBar>
            <AppBarButton x:ConnectionId='1'
                Label="Home"
                                      >
                <AppBarButton.Icon>
                    <SymbolIcon
                        Symbol="Home" />
                </AppBarButton.Icon>
            </AppBarButton>
        </AppBar>
    </Page.TopAppBar>
    <Grid
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="0.05*" />
            <RowDefinition
                Height="0.85*" />
            <RowDefinition
                Height="0.10*" />
        </Grid.RowDefinitions>
        <GridView x:ConnectionId='2'
            x:Name="gridView"
            Grid.Row="1"
            ItemsSource="{Binding OrderItems}"
            ItemTemplate="{StaticResource GridViewItemTemplate}">
        </GridView>
        <Button
            Content="Clear All Orders"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="2"
            Command="{Binding DeleteAllOrdersCommand}"
            CommandParameter="{Binding SelectedItem, ElementName=gridView}" />
        <ProgressRing
            Grid.RowSpan="3"
            IsActive="{Binding IsLoading}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
    </Grid>
</Page>

